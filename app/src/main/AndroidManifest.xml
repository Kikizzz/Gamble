<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studio.bowman.gamblegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true" />

        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Crash"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CrashSurfaceView"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity android:name=".Inventory" />
        <activity android:name=".Case" />
        <activity android:name=".CaseCheck" />
        <activity android:name=".CaseOpen" />
        <activity android:name=".Sweeper" />
        <activity android:name=".test" />
        <activity android:name=".test2" />
        <activity android:name=".CaseDone" />
        <activity android:name=".Main" />
        <activity android:name=".ReactionInit" />
        <activity android:name=".ReactionChoose" />
        <activity android:name=".ReactionGame" />
        <activity android:name=".ReactionPost" />
        <activity
            android:name=".DropScreen"
            android:theme="@style/PopTheme">
        </activity>
    </application>

</manifest>