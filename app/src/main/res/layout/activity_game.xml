<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.bowman.gamblegame.Game"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:background = "@color/background">

    <studio.bowman.gamblegame.CrashView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/crashView" />

    <TextView
        android:id="@+id/valuedisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/crashView" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="89dp"
        android:layout_height="59dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toLeftOf="@+id/space3"
        app:layout_constraintTop_toBottomOf="@+id/valuedisplay"
        app:srcCompat="@drawable/bail" />

    <ImageButton
        android:id="@+id/drop"
        android:layout_width="89dp"
        android:layout_height="59dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/space3"
        app:layout_constraintTop_toBottomOf="@+id/valuedisplay"
        app:srcCompat="@drawable/bail" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valuedisplay"
        android:id="@+id/space3"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="display"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drop" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="profit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <TextView
        android:id="@+id/debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="debug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <TextView
        android:id="@+id/betdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="bet"
        app:layout_constraintBottom_toTopOf="@+id/mainBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageButton
        android:id="@+id/plusmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintLeft_toRightOf="@+id/betdisplay"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/betdisplay"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/betdisplay"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.49" />

    <ImageButton
        android:id="@+id/plusmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@+id/plusmin"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/plusmin"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/plusmin"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/plusmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="-238dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/plusmid"
        app:layout_constraintLeft_toRightOf="@+id/plusmid"
        app:layout_constraintTop_toTopOf="@+id/plusmid"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/minusmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/betdisplay"
        app:layout_constraintRight_toLeftOf="@+id/minusmid"
        app:layout_constraintTop_toTopOf="@+id/betdisplay"
        app:layout_constraintVertical_bias="0.485"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/minusmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/betdisplay"
        app:layout_constraintRight_toLeftOf="@+id/minusmin"
        app:layout_constraintTop_toTopOf="@+id/betdisplay"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/minusmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/betdisplay"
        app:layout_constraintRight_toLeftOf="@+id/betdisplay"
        app:layout_constraintTop_toTopOf="@+id/betdisplay"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mainBtn"
        app:srcCompat="@drawable/play" />

    <ImageButton
        android:id="@+id/mainBtn"
        android:layout_width="111dp"
        android:layout_height="74dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bail" />

    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mainBtn"
        app:srcCompat="@drawable/play" />


</android.support.constraint.ConstraintLayout>
