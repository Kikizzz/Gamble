<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rank"
        android:background="@null"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_vault" />

    <ImageView
        android:id="@+id/reactionbanner"
        android:background="@null"
        android:layout_width="310dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/title_img_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rank" />

    <ImageView
        android:id="@+id/winback"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/reactionbanner"
        app:layout_constraintRight_toLeftOf="@+id/rank"
        app:srcCompat="@drawable/stats_back" />

    <ImageView
        android:id="@+id/loseback"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/reactionbanner"
        app:layout_constraintLeft_toRightOf="@+id/rank"
        app:srcCompat="@drawable/stats_back" />

    <TextView
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="win"
        android:textColor="@color/winlose"
        app:layout_constraintBottom_toBottomOf="@+id/winback"
        app:layout_constraintLeft_toLeftOf="@+id/winback"
        app:layout_constraintRight_toRightOf="@+id/winback"
        app:layout_constraintTop_toTopOf="@+id/winback"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="lose"
        android:textColor="@color/winlose"
        app:layout_constraintBottom_toBottomOf="@+id/loseback"
        app:layout_constraintLeft_toLeftOf="@+id/loseback"
        app:layout_constraintRight_toRightOf="@+id/loseback"
        app:layout_constraintTop_toTopOf="@+id/loseback"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/winimg"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/winback"
        app:layout_constraintLeft_toLeftOf="@+id/winback"
        app:layout_constraintRight_toRightOf="@+id/winback"
        app:srcCompat="@drawable/back_icon" />

    <ImageView
        android:id="@+id/loseimg"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/loseback"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/loseback"
        app:layout_constraintRight_toRightOf="@+id/loseback"
        app:srcCompat="@drawable/back_icon" />
</android.support.constraint.ConstraintLayout>