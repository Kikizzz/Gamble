<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="studio.bowman.gamblegame.ReactionPost">

    <include
        layout="@layout/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:id="@+id/include6" />

    <ImageView
        android:id="@+id/display"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/stats_back"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rankdisplay" />

    <ImageView
        android:id="@+id/rankdisplay"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/rank_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include6"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/include7"
        app:layout_constraintVertical_bias="0.39999998" />

    <ImageView
        android:id="@+id/underrank"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rankdisplay"
        app:srcCompat="@drawable/case_amount_img"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/rankdisplay"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankdisplay" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/underrank"
        app:srcCompat="@drawable/stats_back" />

    <include
        layout="@layout/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:id="@+id/include7" />

    <ImageView
        android:id="@+id/profitback"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/stats_back"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/profitback"
        app:layout_constraintLeft_toLeftOf="@+id/profitback"
        app:layout_constraintRight_toRightOf="@+id/profitback"
        app:layout_constraintTop_toTopOf="@+id/profitback" />

</android.support.constraint.ConstraintLayout>
